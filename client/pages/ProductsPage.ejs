        <li>All</li>
        <li>shirts</li>shorts<li>shoes</li>
        <li>Monitors</li>
      </ul>
      <div class="size-filter filter">
        <label for="sizeSelect">Size:</label>
        <select id="sizeSelect">
          <option value="All">All Sizes</option>
          <option value="S">S</option>
          <option value="M">M</option>
          <option value="L">L</option>
        </select>
      </div>
      <div class="price-filter filter">
        <label for="priceSort">Sort by Price:</label>
        <select id="priceSort">
          <option value="default">Default</option>
          <option value="lowToHigh">Low to High</option>
          <option value="highToLow">High to Low</option>
        </select>
      </div>


      <h3>Price Range</h3>
      <div class="price">
        <input type="range" id="priceRange" min="20" max="15999">
        <span class="priceValue">1300</span>
      </div>
      <button id="resetFiltersButton">Reset Filters</button>
    </div>
