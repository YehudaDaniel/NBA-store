  <script>
    // Function to handle form submission
    function applyFilters() {
      var category = document.getElementById("category").value;
      var size = document.getElementById("size").value;
      var price = document.getElementById("price").value;
      var team = document.getElementById("team").value;
      
      var products = document.getElementsByClassName("product");
      
      for (var i = 0; i < products.length; i++) {
        var product = products[i];
        
        // Reset display for all products
        product.style.display = "block";
      }
      
      // Filter products based on category
      if (category !== "all") {
        for (var i = 0; i < products.length; i++) {
          var product = products[i];
          
          if (product.dataset.category !== category) {
            product.style.display = "none";
          }
        }
      }
      
      // Filter products based on size
      if (size !== "") {
        for (var i = 0; i < products.length; i++) {
          var product = products[i];
          
          if (product.dataset.size !== size) {
            product.style.display = "none";
          }
        }
      }
      
      // Filter products based on price
      if (price !== "") {
        var sortOrder = price === "low" ? 1 : -1;
        var sortedProducts = Array.from(products).sort(function(a, b) {
          var priceA = parseFloat(a.dataset.price);
          var priceB = parseFloat(b.dataset.price);
          return sortOrder * (priceA - priceB);
        });
        
        var productList = document.getElementById("product-list");
        
        for (var i = 0; i < sortedProducts.length; i++) {
          productList.appendChild(sortedProducts[i]);
        }
      }
      
      // Filter products based on team
      if (team !== "") {
        for (var i = 0; i < products.length; i++) {
          var product = products[i];
          
          if (product.dataset.team !== team) {
            product.style.display = "none";
          }
        }
      }
    }
  </script>
